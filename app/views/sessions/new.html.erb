<div class="div-transparent form-group">
  <%= form_tag('/sessions', :method => "post", :class => "login-form", "data-ajax" => "false") do %>
    <%= text_field_tag "email", nil, :class => "form-control", placeholder: "Email" %>
    <%= password_field_tag "password", nil, :class => "form-control top-margin", placeholder: "Password" %>
  <%= submit_tag "Log In", :class => "submit-button btn btn-primary", :disable_with => "Please wait..." %>
  <% end %>
</div>